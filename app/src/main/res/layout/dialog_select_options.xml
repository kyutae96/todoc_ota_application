<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Control Type"
        android:textColor="@color/black"
        android:fontFamily="@font/pretendard_bold"
        android:textSize="15dp"
        android:layout_marginBottom="8dp"/>

    <RadioGroup
        android:id="@+id/rgControlType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

        <RadioButton
            android:id="@+id/rbControlType1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:fontFamily="@font/pretendard_regular"
            android:textSize="14dp"
            android:text="Read Mode"/>

        <RadioButton
            android:id="@+id/rbControlType2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:fontFamily="@font/pretendard_regular"
            android:textSize="14dp"
            android:text="Start OP mode"/>

    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Target"
        android:textColor="@color/black"
        android:fontFamily="@font/pretendard_bold"
        android:textSize="15dp"
        android:layout_marginBottom="8dp"/>

    <RadioGroup
        android:id="@+id/rgTarget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/rbTarget1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:fontFamily="@font/pretendard_regular"
            android:textSize="14dp"
            android:text="Normal"/>

        <RadioButton
            android:id="@+id/rbTarget2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:fontFamily="@font/pretendard_regular"
            android:textSize="14dp"
            android:text="Local DFU"/>

        <RadioButton
            android:id="@+id/rbTarget3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:fontFamily="@font/pretendard_regular"
            android:textSize="14dp"
            android:text="Peer DFU"/>

        <RadioButton
            android:id="@+id/rbTarget4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:fontFamily="@font/pretendard_regular"
            android:textSize="14dp"
            android:text="Mapping"/>

    </RadioGroup>

</LinearLayout>