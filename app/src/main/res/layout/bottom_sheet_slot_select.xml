<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/root"
        android:orientation="vertical"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="24dp"
        android:paddingBottom="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- 제목 -->
        <TextView
            android:id="@+id/tvTitle"
            android:text="다운로드 슬롯 선택"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:fontFamily="@font/pretendard_semibold"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- 설명 -->
        <TextView
            android:id="@+id/tvSubtitle"
            android:text="다운로드를 진행할 슬롯을 선택합니다."
            android:textSize="14dp"
            android:textColor="@color/black"
            android:fontFamily="@font/pretendard_regular"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- 슬롯 카드 2개 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="20dp">

            <!-- SLOT 1 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardSlot1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:minHeight="160dp"
                android:layout_weight="1"
                android:layout_marginEnd="12dp"
                app:cardCornerRadius="24dp"

                app:strokeWidth="2dp"
                app:strokeColor="@color/slot_card_stroke"
                app:cardBackgroundColor="@color/slot_card_bg">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="8dp"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tvSlotNum1"
                        android:text="1"
                        android:textSize="42dp"
                        android:fontFamily="@font/pretendard_extrabold"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/tvDate1"
                        android:text="2025.03.27"
                        android:textSize="14dp"
                        android:textColor="@color/gray"
                        android:fontFamily="@font/pretendard_regular"
                        android:layout_marginTop="6dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_marginTop="8dp"
                        android:layout_width="wrap_content"
                        android:gravity="center"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/badgeCurrent1"
                            android:text="현재 사용 중"
                            android:paddingHorizontal="12dp"
                            android:paddingVertical="6dp"
                            android:textSize="12dp"
                            android:fontFamily="@font/pretendard_regular"
                            android:textColor="@color/gray"
                            android:background="@drawable/gray_rectangle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/badgeRecent1"
                            android:text="최근 업데이트 됨"
                            android:paddingHorizontal="12dp"
                            android:paddingVertical="6dp"
                            android:textSize="12dp"
                            android:fontFamily="@font/pretendard_regular"
                            android:textColor="@color/gray"
                            android:background="@drawable/gray_rectangle"
                            android:layout_marginTop="6dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- SLOT 2 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardSlot2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:minHeight="160dp"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                app:cardCornerRadius="24dp"
                app:strokeWidth="2dp"
                app:strokeColor="@color/slot_card_stroke"
                app:cardBackgroundColor="@color/slot_card_bg">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="8dp"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tvSlotNum2"
                        android:text="2"
                        android:textSize="42dp"
                        android:fontFamily="@font/pretendard_extrabold"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/tvDate2"
                        android:text="2025.01.15"
                        android:textSize="14sp"
                        android:textColor="@color/gray"
                        android:fontFamily="@font/pretendard_regular"
                        android:layout_marginTop="6dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/badgeCurrent2"
                            android:text="현재 사용 중"
                            android:paddingHorizontal="12dp"
                            android:paddingVertical="6dp"
                            android:textSize="12dp"
                            android:textColor="@color/gray"
                            android:fontFamily="@font/pretendard_regular"
                            android:background="@drawable/gray_rectangle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/badgeRecent2"
                            android:text="최근 업데이트 됨"
                            android:paddingHorizontal="12dp"
                            android:paddingVertical="6dp"
                            android:textSize="12dp"
                            android:fontFamily="@font/pretendard_regular"
                            android:textColor="@color/gray"
                            android:background="@drawable/gray_rectangle"
                            android:layout_marginTop="6dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <!-- 선택 버튼 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnConfirm"
            android:text="선택"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="24dp"
            app:cornerRadius="28dp"
            app:iconGravity="textStart"
            android:fontFamily="@font/pretendard_semibold"
            app:backgroundTint="@color/todocBlueColor"
            android:textColor="@color/white"/>
    </LinearLayout>
</LinearLayout>
